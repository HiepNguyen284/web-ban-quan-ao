include ../mixins/category-tree.pug

div(class="aside")
  div(class="filter-section")
    h4 Giá
    hr(style="width: 50px; border: 2px solid #b81c23; margin: 0 0 10px 0")

    select(class='form-select' filter-price)
      option(value='') Tất cả
      option(value='0-200000') Dưới 200.000đ
      option(value='200000-400000') 200.000đ - 400.000đ
      option(value='400000-600000') 400.000 - 600.000đ
      option(value='600000-10000000') Trên 600.000đ
  
  div(class="filter-section", style="margin-top: 30px")
    h4 Sắp xếp
    hr(style="width: 50px; border: 2px solid #b81c23; margin: 0 0 10px 0")

    select(class='form-select' sort-product)
      option(value='') Mặc định
      option(value='price-desc') Theo giá giảm dần
      option(value='price-asc') Theo giá tăng dần
      option(value='name') Theo tên
      option(value='product-asc') Theo sản phẩm bán chạy

  div(class="filter-section" style="margin-top: 30px")
    h4 Danh mục
    hr(style="width: 50px; border: 2px solid #b81c23; margin: 0 0 10px 0")

    ul(class="category-list")
      li
        span(class='category-name' slug='') Tất cả danh mục
      +categoryTree(categories, '', 0)

  script(src='/js/sider.js')
