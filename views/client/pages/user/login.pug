extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-success()
  +alert-error()

  div(class='container') 
    h1.titlePage Đăng nhập

    form(action='/users/login' method='POST' class='register-form')

      div(class='mb-3')
        label(class='form-label' for='email') Email
        input(type='email' name='email' id='email' class='form-control')
      
      div(class='mb-3')
        label(class='form-label' for='password') Mật khẩu
        input(type='password' name='password' id='password' class='form-control')
      
      div(class='mb-3')
        button(type='submit' class='btn btn-pink') Đăng nhập

      p Bạn chưa có tài khoản? 
        a(href='/users/register' style='color: blue') Đăng ký ngay
      