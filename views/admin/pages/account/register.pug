extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-success()
  +alert-error()

  div(class='container') 
    h1.titlePage Đăng ký tài khoản

    form(action='/admin/account/register' method='POST' class='register-form')

      div(class='mb-3')
        label(class='form-label' for='fullName') Họ tên
        input(type='text' name='fullName' id='fullName' class='form-control')

      div(class='mb-3')
        label(class='form-label' for='email') Email
        input(type='email' name='email' id='email' class='form-control')
      
      div(class='mb-3')
        label(class='form-label' for='password') Mật khẩu
        input(type='password' name='password' id='password' class='form-control')
      
      div(class='mb-3')
        label(class='form-label' for='confirm-password') Xác nhận mật khẩu
        input(type='password' name='confirm-password' id='confirm-password' class='form-control')

      div(class='mb-3')
        label(class='form-label' for='phone') Số điện thoại
        input(type='text' name='phone' id='phone' class='form-control')
      
      div(class='mb-3')
        label(class='form-label' for='address') Địa chỉ
        input(type='text' name='address' id='address' class='form-control')
      
      div(class='mb-3')
        button(type='submit' class='btn btn-pink') Đăng ký
      